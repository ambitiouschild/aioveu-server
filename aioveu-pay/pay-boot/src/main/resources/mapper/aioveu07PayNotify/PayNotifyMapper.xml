<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aioveu.pay.aioveu07PayNotify.mapper.PayNotifyMapper">

    <!-- 获取支付通知分页列表 -->
    <select id="getPayNotifyPage" resultType="com.aioveu.pay.aioveu07PayNotify.model.vo.PayNotifyVO">
        SELECT
                id,
                notify_no,
                payment_no,
                refund_no,
                notify_type,
                notify_url,
                request_data,
                response_data,
                notify_status,
                notify_count,
                max_notify_count,
                next_notify_time,
                last_notify_time,
                success_time,
                error_message,
                is_deleted,
                create_time,
                update_time
        FROM
            pay_notify
        <where>
            <if test="queryParams.notifyNo != null and queryParams.notifyNo != ''">
                AND notify_no LIKE CONCAT(#{queryParams.notifyNo}, '%')
            </if>
            <if test="queryParams.paymentNo != null and queryParams.paymentNo != ''">
                AND payment_no LIKE CONCAT(#{queryParams.paymentNo}, '%')
            </if>
            <if test="queryParams.refundNo != null and queryParams.refundNo != ''">
                AND refund_no LIKE CONCAT(#{queryParams.refundNo}, '%')
            </if>
            <if test="queryParams.notifyType != null and queryParams.notifyType != ''">
                AND notify_type LIKE CONCAT(#{queryParams.notifyType}, '%')
            </if>
            <if test="queryParams.notifyStatus != null">
                AND notify_status LIKE CONCAT(#{queryParams.notifyStatus}, '%')
            </if>
            <if test="queryParams.nextNotifyTime != null">
                <if test="queryParams.nextNotifyTime[0] != null and queryParams.nextNotifyTime[0] != ''">
                    <bind name="startDate" value="queryParams.nextNotifyTime[0].length() == 10 ? queryParams.nextNotifyTime[0] + ' 00:00:00' : queryParams.nextNotifyTime[0]"/>
                    AND next_notify_time &gt;= #{startDate}
                </if>
                <if test="queryParams.nextNotifyTime[1] != null and queryParams.nextNotifyTime[1] != ''">
                    <bind name="endDate" value="queryParams.nextNotifyTime[1].length() == 10 ? queryParams.nextNotifyTime[1] + ' 23:59:59' : queryParams.nextNotifyTime[1]"/>
                    AND next_notify_time &lt;= #{endDate}
                </if>
            </if>
            <if test="queryParams.createTime != null">
                <if test="queryParams.createTime[0] != null and queryParams.createTime[0] != ''">
                    <bind name="startDate" value="queryParams.createTime[0].length() == 10 ? queryParams.createTime[0] + ' 00:00:00' : queryParams.createTime[0]"/>
                    AND create_time &gt;= #{startDate}
                </if>
                <if test="queryParams.createTime[1] != null and queryParams.createTime[1] != ''">
                    <bind name="endDate" value="queryParams.createTime[1].length() == 10 ? queryParams.createTime[1] + ' 23:59:59' : queryParams.createTime[1]"/>
                    AND create_time &lt;= #{endDate}
                </if>
            </if>
        </where>
    </select>

</mapper>
